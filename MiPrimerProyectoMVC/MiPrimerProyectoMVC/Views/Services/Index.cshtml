@model IEnumerable<MiPrimerProyectoMVC.Model.Service>
<style>
    body {
        background: url(https://i.pinimg.com/originals/16/e3/af/16e3afca1c0fdd1bfb2cb67ed1519a76.jpg) repeat fixed;
    }
</style>

<p>
    <input type="button" class="btn btn-success" value="Crear Servicio" onclick="location.href='@Url.Action("Create")'" />
    <input type="button" class="btn btn-success" value="Refrescar Sericios" onclick="location.href='@Url.Action("Get")'" />
</p>


 await Get();

<div class="panel panel-primary">

    <div class="panel-heading">Lista de Suscripciones</div>
    

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Nombre del Servicio")
            </th>
            <th>
                @Html.DisplayName("Descripcion del Servicio")
            </th>
            <th>
                @Html.DisplayName("Precio")
            </th>
            <th>
                @Html.DisplayName("Esta activo")
            </th>
            <th>
                @Html.DisplayName("En uso")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsUsed)
                </td>
                <td>

                    @if (FrontUser.TienePermiso(RolesPermisos.Puede_Editar_Servicios))
                {
                        <button class="btn btn-success" onclick="location.href='@Url.Action("Edit", "Services",new { id = item.ServiceID })';return false;">Editar</button>


                    }

                    @if (FrontUser.TienePermiso(RolesPermisos.Puede_Detalles_Servicioss))
                    {
                        <button class="btn btn-info" onclick="location.href='@Url.Action("Details", "Services",new { id = item.ServiceID })';return false;">Detalles</button>



                    }

                    @if (FrontUser.TienePermiso(RolesPermisos.Puede_Borrar_Servicios))
                {
                        <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Services",new { id = item.ServiceID })';return false;">Borrar</button>



                    }


                </td>
            </tr>
        }

    </table>

</div>