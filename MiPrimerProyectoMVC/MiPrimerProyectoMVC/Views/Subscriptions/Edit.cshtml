@model MiPrimerProyectoMVC.Model.Subscription

<style>
    body {
        background: url(https://i.pinimg.com/originals/16/e3/af/16e3afca1c0fdd1bfb2cb67ed1519a76.jpg) repeat fixed;
    }
</style>

<h2  style=" color: white">Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4  style=" color: white">Suscripcion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SubscriptionID)

        <div class="form-group"  style=" color: white">
            @Html.LabelFor(model => model.PlanID, "Plan Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PlanID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PlanID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  style=" color: white">
            @Html.LabelFor(model => model.ClientID, "Client Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClientID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  style=" color: white">
            @Html.LabelFor(model => model.ExpirationDate,"Dia de vencimiento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpirationDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExpirationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  style=" color: white">
            @Html.LabelFor(model => model.IsExpired,"Esta expirado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsExpired)
                    @Html.ValidationMessageFor(model => model.IsExpired, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group"  style=" color: white">
            @Html.LabelFor(model => model.IsUsed,"Esta en uso", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsUsed)
                    @Html.ValidationMessageFor(model => model.IsUsed, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>


    <p>
        <input type="button" class="btn btn-success" value="Anadir un Servicio a este Plan" onclick="location.href='@Url.Action("Create","Plan_Service")'" />
    </p>

    <div class="panel panel-primary">

        <div class="panel-heading">Detalles sobre el Plan</div>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Plan ID")
                </th>
                <th>
                    @Html.DisplayName("Descripcion del Plan")
                </th>

                <th></th>
            </tr>


            <tr>
                <td>

                    @Html.DisplayFor(model => model.Plan.PlanName)

                </td>
                <td>

                    @Html.DisplayFor(model => model.Plan.PlanDescription)

                </td>

                <td>
                    @Html.ActionLink("Editar", "Edit", "Plans", new RouteValueDictionary(new { id = Model.Plan.PlanID }), null) |
                    @Html.ActionLink("Detalles", "Details", "Plans", new RouteValueDictionary(new { id = Model.Plan.PlanID }), null) |
                    @Html.ActionLink("Borrar", "Delete", "Plans", new RouteValueDictionary(new { id = Model.Plan.PlanID }), null) |
                </td>

            </tr>


        </table>
         </div>
        }

        <div>


            <input type="button" class="btn btn-info" value="Volver a la lista" onclick="location.href='@Url.Action("Index")'" />

        </div>


        <script type="text/javascript">
            $(document).ready(function () {
                $("#ExpirationDate").datepicker();
                startView: 1
            })
        </script>


