        <h4>Tasa de intercambio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Id,"ID", htmlAttributes: new { @class = "control-label col-md-2" })
